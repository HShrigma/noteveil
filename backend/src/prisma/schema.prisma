generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model Note {
    id      Int    @id @default(autoincrement())
    title   String
    content String
}

model TaskList {
    id     Int    @id @default(autoincrement())
    title  String
    nextId Int?
    tasks  Task[]
}

model Task {
    id         Int      @id @default(autoincrement())
    label      String
    done       Boolean  @default(false)
    taskList   TaskList @relation(fields: [taskId], references: [id])
    taskListId Int?
    taskId     Int
}
